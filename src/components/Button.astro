---
interface Props {
  href: string;
  color: string;
  compact?: boolean;
}
const { props } = Astro;
---

<a
  href={props.href}
  class:list={["btn", props.compact && "btn-compact"]}
  style=`--color-btn:var(--color-${props.color})`><slot /></a
>

<style>
  .btn {
    border: 2px solid var(--color-btn);
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    font-size: 1.25rem;
    text-decoration: none;
    text-align: center;
    font-family: "Sligoil", serif;
  }
  .btn-compact {
    padding: 0.25rem 0.5rem;
  }
  .btn:hover {
    background-color: var(--color-btn);
    color: var(--color-background);
  }
</style>
