---
interface Props {
  href: string;
  color: string;
}
const { props } = Astro;
---

<a href={props.href} class="btn" style=`--color-btn:var(--color-${props.color})`
  ><slot /></a
>

<style>
  .btn {
    border: 2px solid var(--color-btn);
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    font-size: 1.25rem;
    text-decoration: none;
  }
  .btn:hover {
    background-color: var(--color-btn);
    color: var(--color-background);
  }
</style>
