---
import "@acab/reset.css";
import Nav from "../sections/Nav.astro";
import Footer from "../sections/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
    <link rel="stylesheet" href="https://use.typekit.net/jhu1ufw.css" />
  </head>
  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Sligoil";
    src:
      url("/fonts/sligoil/Sligoil-Micro.woff2") format("woff2"),
      url("/fonts/sligoil/Sligoil-Micro.woff") format("woff");
  }

  :root {
    --color-background: #100d24;
    --color-accent-a: #c1fd00;
  }
  p {
    font-family: "aktiv-grotesk", sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  * {
    font-family: "Sligoil", sans-serif;
  }
  html {
    font-size: 16px;
    background-color: var(--color-background);
  }

  .star-after {
    position: relative;
    display: inline-block;
    padding-right: 0.5em;
    text-decoration: inherit;
  }

  .star-after::after {
    content: "* ";
    position: absolute;
    right: 0;
    text-decoration: inherit;
  }
</style>
