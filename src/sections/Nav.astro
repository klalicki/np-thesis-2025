---
import siteLogo from "../assets/site-logo.png";
// import Image from "astro/components/Image.astro";
import { Image } from "astro:assets";
---

<header>
  <nav>
    <a href="/" class="nav-logo"
      ><Image alt="Design Show Home" src={siteLogo} />
    </a>
    <div class="right-group">
      <a class="alternating-link" href="/designers"
        ><span class="star-after">Designers</span></a
      >
      <a class="alternating-link" href="/about"
        ><span class="star-after">About</span></a
      >
    </div>
  </nav>
</header>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    padding: 1em;
  }
  .right-group {
    display: flex;
    gap: 0.5em;
  }
  a {
    display: block;
    font-family: "Sligoil", serif;
    padding: 0.5rem;
    text-decoration: none;
  }
  .nav-logo:hover,
  .nav-logo:focus-visible {
    background-color: rgba(255, 255, 255, 0.2);
  }
  .nav-logo {
    width: clamp(150px, 30vw, 250px);
  }
  header {
    border-bottom: 1px solid var(--color-accent-a);
  }
</style>
